    <TextView
        android:id="@+id/tw_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/value"
        app:layout_constraintEnd_toStartOf="@+id/tw_fp"
        app:layout_constraintTop_toBottomOf="@+id/tw_fs" />

    <TextView
        android:id="@+id/tw_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="18dp"
        android:text="@string/value"
        app:layout_constraintEnd_toStartOf="@+id/tw_rp"
