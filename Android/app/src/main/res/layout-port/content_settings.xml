        app:layout_constraintTop_toBottomOf="@+id/tw_bs" />

    <TextView
        android:id="@+id/tw_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="18dp"
        android:text="@string/value"
        app:layout_constraintEnd_toStartOf="@+id/tw_lp"
        app:layout_constraintTop_toBottomOf="@+id/tw_ls" />

    <Button
        android:id="@+id/btn_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:text="@string/settings_standard"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/tw_info"
        app:layout_constraintStart_toStartOf="parent" />

