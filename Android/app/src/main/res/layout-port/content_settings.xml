        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_fs" />

    <TextView
        android:id="@+id/tw_rp"
        android:layout_width="15dp"
